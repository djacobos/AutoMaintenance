<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AutoMaintenance.LoginPage">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness"
					 iOS="20,40,20,20"	
					 Android="20,20,20,20"	
					 WinPhone="20,20,20,20"/>	
	</ContentPage.Padding>
	<ContentPage.Content>
	 	<StackLayout Orientation="Vertical"  Padding="0,50,0,0">
	 		<Label x:Name="errorMessage" TextColor="#f44336" HorizontalOptions="Center"></Label>
	 		<Entry x:Name="userName" Placeholder="User Name"></Entry>
	 		<Entry x:Name="password" Placeholder="Password"></Entry>

		 	<StackLayout Orientation="Horizontal"  Padding="0,10,0,0" x:Name="loginStackLayout" HorizontalOptions="StartAndExpand">
				<Button x:Name="buttonRegister" Text="Create New Account" Clicked="OnClick_Register"></Button>
				<Button x:Name="buttonLogin" Text="Sign In" Clicked="OnClick_Login" HorizontalOptions="EndAndExpand" ></Button>
			</StackLayout>
	 		
		</StackLayout>

	</ContentPage.Content>
</ContentPage>
